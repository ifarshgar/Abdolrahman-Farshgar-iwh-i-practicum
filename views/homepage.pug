doctype html
html(lang="en")
  head
    title= title
    link(rel="stylesheet", href="/css/style.css")
  body
    .form-wrapper
      h1 Custom Object Records (#{objectType})

      div(style="margin: 0 1rem")
        a(href="/update/video-game", style="display: inline-block; margin-bottom: 1.5rem; background-color: #ff7a59; color: white; padding: 0.5rem 1rem; border-radius: 5px; text-decoration: none") + Add New Record
        
        if error
          p.error(style="color: #d33; padding: 1rem; background-color: #ffeeee; border-radius: 5px; margin: 1rem 0")= error
        else if data && data.length > 0
          .cards
            each record in data
              .card
                h2.title(title=record.properties.name)= record.properties.name
                p
                  strong Genre: 
                  span= record.properties.genre
                p
                  strong Price: 
                  span= `$${record.properties.price}`
        else
          p(style="text-align: center; margin: 2rem 0") No records found. 
